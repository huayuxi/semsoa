@charset "utf-8";
/* CSS Document */
*{
    margin:0;
	padding:0;
	font: normal /*small-caps*/ normal 12px/1.5em verdana, sans-serif;
}

html, body {
	margin:0;
	padding:0;
	background: #0abfcf;
}
a:link,
a:visited{color:#2b89bf;text-decoration:none;}
a:hover{color:#f29000;text-decoration:underline;}

/* 水平分割线 */
.hr0{ height:1px;border:none;border-top:1px dashed #524D30;}
.hr1{ height:1px;border:none;border-top:1px solid #EBF1F1; margin:10px auto;}
.hr1_2{ height:2px;border:none;border-top:2px solid #f28b00; margin:10px auto;}
.hr2{ height:3px;border:none;border-top:3px double #524D30;}
.hr3{ height:5px;border:none;border-top:5px ridge #574431;}
.hr4{ height:10px;border:none;border-top:10px groove skyblue;}

/*page*/
.layout {
	margin:0 auto;
	padding: 0;
	width: 100%;
	min-width:956px;
	color:#888;
    background:#fff;
	position:relative;
}

/* button skyblue */
.button {
	padding: .1em 1em .15em;
	color: #333;
	border: solid 1px #C9D7E2;
	background: #f78d1d;
	background: -webkit-gradient(linear, left top, left bottom, from(#b7daed), to(#d8ebf6));
	background: -moz-linear-gradient(top,  #b7daed,  #d8ebf6);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#b7daed', endColorstr='#d8ebf6');
}
.button:hover {
	background: #f47c20;
	background: -webkit-gradient(linear, left top, left bottom, from(#9ecce5), to(#74b8de));
	background: -moz-linear-gradient(top,  #9ecce5,  #74b8de);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#9ecce5', endColorstr='#74b8de');
}
.button:active {
	color: #fcd3a5;
	background: -webkit-gradient(linear, left top, left bottom, from(#d8ebf6), to(#b7daed));
	background: -moz-linear-gradient(top,  #d8ebf6,  #b7daed);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#d8ebf6', endColorstr='#b7daed');
}
/*表格样式规范*/
table.stripe_table {
width: 100%;
text-align:center;
background:#cdcdcd;
border-collapse:separate;
border-spacing:1px;
margin-top:10px;
}
table.stripe_table th{
background:#d1edfb;
padding: 3px 10px;
color:#333;
}
table.stripe_table td{
padding: 3px 10px;
vertical-align:top;
background:#ffffff;
}
tr.alt td{
background:#ecf6fc;
}
#pageline td{
background:#ffffff;
}
tr.over td{
background:#ecf7fd;
}
table.normal{
width: 100%;
text-align:center;
border-collapse:separate;
border-spacing:1px;
margin-top:10px;
}
table.normal th{
padding: 3px 10px;
text-align:right;
}
table.normal td{
padding: 3px 10px;
vertical-align:top;
text-align:left;
background:#ffffff;
}

/*breadcrumb*/
.bd_bg{ border-bottom:1px solid #d2d2d2; position:relative;}
.breadcrumb{ 
    width:100%; 
	font: normal 12px "宋体"; 
    color:#696969;
	display:block; 
	float:left;
	overflow:hidden;
	line-height:20px; 
	margin:5px auto;
	padding:3px 0 10px 0; 
}
.breadcrumb span{
	display:inline-block;
	padding:0 20px 0 0;
	background:url("../images/vane.gif") right top no-repeat;
}
.breadcrumb span a,
.breadcrumb span a:link{ 
    color:#0f64a6;
	text-decoration:none;
}
.breadcrumb span a:hover{ 
    color:#ff4e00;
	text-decoration:underline;
}
.breadcrumb span.firstLi{ 
    padding:0 5px 0 1em;
	background:none;
}
.breadcrumb span.urhere{ 
    color:#ff4e00; 
	font-weight:bold;
	padding:0 5px;
	background:none;
}
.breadcrumb span.goback{
	background:none;
}